rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // 찬송가 이미지는 누구나 읽기 가능, 쓰기는 불가
    match /hymns/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // 기타 파일은 기본 규칙 적용
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
